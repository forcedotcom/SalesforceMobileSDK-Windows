<?xml version="1.0" encoding="utf-8"?>

<!-- 
  Define your default server connections in this XML.  These options will always be provided to the user regardless of any connections they add.
  Setting "allowNewConnections" to false and specifying a single server will streamline login; adding an account will go straight to oauth, skipping the server dialog.
  -->
<servers allowNewConnections="True"> <!-- set allowNewConnections to false if creating new connections should not be allowed -->
  <server name="Production" url="https://login.salesforce.com" />
  <server name="Sandbox" url="https://test.salesforce.com" />
</servers>